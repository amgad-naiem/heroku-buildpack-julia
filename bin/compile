#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# parse args
BUILD_DIR=$1
CACHE_DIR=$2

BP_DIR=`cd $(dirname $0); cd ..; pwd`

JULIA_VERSION="v0.3.0"
JULIA_DIST="julia_0.3.0-1189~ubuntu12.04.1_amd64"
JULIA_DIST_TAR="julia_0.3.0-1189~ubuntu12.04.1.tar.gz"
JULIA_DIST_TAR_URL="https://launchpad.net/~staticfloat/+archive/ubuntu/juliareleases/+files/${JULIA_DIST_TAR}"
JULIA_HOME="${BUILD_DIR}/.julia"

[ ! -d ${CACHE_DIR} ] && mkdir -p ${CACHE_DIR}

# Download Julia if not in cache
if [ ! -f ${CACHE_DIR}/${JULIA_DIST_TAR} ]; then
  echo -n "-----> Downloading julia-${JULIA_VERSION}....."
  curl --silent --location ${JULIA_DIST_TAR_URL} > ${CACHE_DIR}/${JULIA_DIST_TAR}
  echo " done"
fi

echo -n "-----> Installing julia-${JULIA_VERSION}...."

# Untar Julia
cd ${BUILD_DIR}
tar -zxf ${CACHE_DIR}/${JULIA_DIST_TAR}
mv ${JULIA_DIST} ${JULIA_HOME}
echo " done"

if [ "${PIPESTATUS[*]}" != "0" ]; then
  echo " !     Failed to install ${JULIA_DIST}"
  exit 1
fi
